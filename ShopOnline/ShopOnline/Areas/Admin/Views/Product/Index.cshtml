@model IEnumerable<ShopOnline.Data.Models.Product>

@section header{
    <h1>Danh sách sản phẩm</h1>
}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a style="cursor:pointer" asp-action="AddProduct" asp-controller="Product">Thêm sản phẩm</a>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-examplex">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Tên sản phẩm</th>
                                <th>Giá</th>
                                <th>Ảnh</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@item.ProductId</td>
                                    <td> @item.ProductName </td>
                                    <td class="center">@String.Format("{0:0,0}", item.Price) VNĐ</td>
                                    <td class="text-center"><img src="@Url.Content("~/images/" + item.ProductImage)" alt="@item.ProductImage" width="100" height="100" /></td>
                                    <td>
                                        <input type="button" class="btn btn-success" value="Chi tiết" onclick="location.href='@Url.Action("GetById", "Product", new {@id=item.ProductId })'" />
                                        <input type="button" class="btn btn-success" value="Sửa" onclick="location.href='@Url.Action("UpdateProduct", "Product", new {@id=item.ProductId })'" />

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

